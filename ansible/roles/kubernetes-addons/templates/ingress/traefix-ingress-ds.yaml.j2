apiVersion: extensions/v1beta1
kind: DaemonSet
metadata:
  name: traefik-ingress-lb
  namespace: default
  labels:
    k8s-app: traefik-ingress-lb
spec:
  template:
    metadata:
      labels:
        k8s-app: traefik-ingress-lb
        name: traefik-ingress-lb
    spec:
      nodeSelector:
        role: api-gateway
      restartPolicy: Always
      serviceAccountName: traefik-ingress
      hostNetwork: true
      containers:
      - image: traefik
        name: traefik-ingress-lb
        args:
        - --web
        - --kubernetes
        ports:
        - containerPort: 80
          #hostPort: 80
        - containerPort: 443
          #hostPort: 443
